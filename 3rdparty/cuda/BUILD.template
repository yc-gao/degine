package(default_visibility = ["//visibility:public"])

cc_library(
    name = "cuda_headers",
    hdrs = glob([
        "include/**/*.h",
        "include/**/*.hpp",
        "include/nv/**/*",
    ]),
    includes = ["include"],
)

cc_import(
    name = "cusparse_static",
    static_library = "lib64/libcusparse_static.a",
    deps = [":cuda_headers"]
)

cc_import(
    name = "cudart_static",
    static_library = "lib64/libcudart_static.a",
    deps = [":cuda_headers"]
)

alias(name = "libcuda", actual = ":cudart_static")
